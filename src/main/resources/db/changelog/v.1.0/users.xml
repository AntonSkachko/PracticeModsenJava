<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-table-users" author="Ptuxa">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="email" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="login" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(300)">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="varchar(45)"/>
            <column name="gender" type="integer"/>
            <column name="birthday" type="date"/>
            <column name="role" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>