<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-tokens-refresh-table" author="Ptuxa">
        <createTable tableName="tokens_refresh">
            <column name="id" type="uuid" autoIncrement="1">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="access_token" type="varchar(300)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="expiry_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false" unique="true" foreignKeyName="FK_tokens_refresh" references="users(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>