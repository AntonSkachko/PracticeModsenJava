<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-table-orders" author="Ptuxa">
        <createTable tableName="orders">
            <column name="id" type="${uuid_type}" valueComputed="${uuid_function}">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="personal_info_id" type="uuid">
                <constraints nullable="false" foreignKeyName="FK_order_personal_info" references="personal_info(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>